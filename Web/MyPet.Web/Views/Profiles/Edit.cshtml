@model MyPet.Web.ViewModels.Profiles.EditProfileInputModel

<form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data" id="editForm">
    <div class="form-group">
        <label asp-for="Name" >Name</label>
        <input asp-for="Name"  placeholder="If you want to change your pet's name, TYPE HERE" class="form-control"  />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group" enctype="multipart/form-data">
        <label asp-for="Images">Add photos</label>
        <input asp-for="Images" class="form-control"  />
        <span asp-validation-for="Images" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Id" value="@this.ViewData["petId"]" />
    <hr />

</form>
<button type="submit" class="btn btn-success col-md-6 offset-md-3" data-toggle="modal" data-target="#modalEdit">Save changes</button>



<!-- Modal -->
<div class="modal" id="modalEdit" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>
                    Do you confirm this changes?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="editForm.submit()">Save changes</button>
            </div>
        </div>
    </div>
</div>
