@model MyPet.Web.ViewModels.Profiles.EditProfileInputModel

    <form method="post" class="col-md-6 offset-md-3" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name">Change your pet's name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        
        <div class="form-group" enctype="multipart/form-data">
            <label asp-for="Images">Add photos</label>
            <input asp-for="Images" class="form-control" />
            <span asp-validation-for="Images" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="Id" value="@this.ViewData["petId"]" />
        <hr />
        <input type="submit" class="btn btn-success" value="Save changes" />
    </form>
