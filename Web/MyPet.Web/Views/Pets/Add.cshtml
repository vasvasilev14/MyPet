@model MyPet.Web.ViewModels.Pets.AddPetInputModel
@{ 
    this.ViewData["Ttile"] = "Add your pet";
    var breeds = this.Model.Breeds.Select(x => new SelectListItem(x.Value, x.Key));
}

<form method="post" class="col-md-6 offset-md-3">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth"></label>
        <input asp-for="DateOfBirth" class="form-control" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender"></label>
        <div>
            Male:   @Html.RadioButton("Gender", "Male")

            Female: @Html.RadioButton("Gender", "Female")
        </div>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BreedId" >Breed</label>
        <select asp-for="BreedId"  class="form-control" asp-items="breeds"></select>
        <span asp-validation-for="BreedId" class="text-danger"></span>
    </div>
    <input type="submit" class="btn-primary" />
</form>

